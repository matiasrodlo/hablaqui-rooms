# Twilio Configuration (Required for local token server)
# Get these values from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_CONVERSATIONS_SERVICE_SID=ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Environment (Optional)
# Set to 'dev' for development environment, 'prod' for production (default)
REACT_APP_TWILIO_ENVIRONMENT=

# Authentication Configuration (Optional)
# Set to 'firebase' to enable Firebase authentication, 'passcode' for passcode auth, or leave unset for no auth
REACT_APP_SET_AUTH=

# Token Endpoint (Optional)
# Custom endpoint for token generation (defaults to '/token' if not set)
REACT_APP_TOKEN_ENDPOINT=

# Twilio Conversations (Optional)
# Set to 'true' to disable Twilio Conversations chat feature
REACT_APP_DISABLE_TWILIO_CONVERSATIONS=

# Firebase Configuration (Required if REACT_APP_SET_AUTH=firebase)
# Get these values from https://console.firebase.google.com/
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_DATABASE_URL=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=

# Server Configuration (Optional)
# Port for the local token server (defaults to 8081)
PORT=

# Git Information (Optional, typically set by CI/CD)
REACT_APP_GIT_TAG=
REACT_APP_GIT_COMMIT=
